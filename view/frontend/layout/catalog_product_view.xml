<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template" name="logik.configurator" template="Logik_Integration::logik-configurator.phtml" after="product.info.main">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="logik-configurator" xsi:type="array">
                                <item name="component" xsi:type="string">Logik_Integration/js/logik-configurator</item>
                                <item name="template" xsi:type="string">Logik_Integration/logik-configurator</item>
                                <item name="displayArea" xsi:type="string">content</item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page> 